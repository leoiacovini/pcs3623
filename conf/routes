# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index
GET     /discovery                  controllers.MainController.getDiscovery
GET     /protected                  controllers.MainController.protectedRoute

GET     /api/rooms/:id                  controllers.RoomController.getRoom(id: Long)
GET     /api/rooms/bulding/:bulding     controllers.RoomController.getRooms(bulding)
POST    /api/rooms                      controllers.RoomController.registerRoom

POST    /api/user                           controllers.UserController.registerUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
